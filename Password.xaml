<Window x:Class="WpfApp3.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d" Icon="icon.ico"
        WindowStartupLocation="CenterScreen"  Height="170" Width="320">
    <Grid FocusManager.FocusedElement="{Binding ElementName=PasswordForMistakes}">
        <StackPanel Background="#FF283742">
            <Label Content="Введите пароль" Margin="15" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" Foreground="#FFA8BFCF"/>
            <PasswordBox Margin="15, 0, 80, 0" x:Name="PasswordForMistakes" FontSize="15" Height="25"/>
            <Button x:Name="Ok" Content="ОК" Background="#FFD781D4" Width="70" Height="30" Margin="0, -28, 5, 0" FontSize="12" BorderBrush="#FFAF72A7" BorderThickness="4" HorizontalAlignment="Right" Click="ok_Click" FontWeight="Bold" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>
